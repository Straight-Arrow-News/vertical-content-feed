<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/"
    xmlns:dcterms="http://purl.org/dc/terms/"
    xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:snf="http://www.smartnews.be/snf"
    version="2.0">
    <channel>
        <atom:link href="{{ feed_url }}" rel="self"
            type="application/rss+xml" />
        <title>Straight Arrow News. Unbiased. Straight Facts.</title>
        <description>Straight
        Arrow News. Unbiased. Straight Facts.</description>
        <link>https://san.com</link>

        {% for item in items %} 
        <item>
            <title><![CDATA[{{ item.body }}]]></title>
            <guid isPermaLink="false">{{ item.guid }}</guid>
            <pubDate>{{ item.pubdate }}</pubDate>
            <media:title><![CDATA[{{ item.body }}]]></media:title>
            <link>{{ item.link }}</link>
            <media:content url="{{ item.video_url }}" type="video/mp4" />
            <media:thumbnail url="{{ item.thumbnail_url }}" />
        </item> 
        {% endfor %} 
    </channel>
</rss>